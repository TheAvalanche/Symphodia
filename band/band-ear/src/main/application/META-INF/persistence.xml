<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="SymphodiaBandUnit" transaction-type="JTA">

        <jta-data-source>java:jboss/symphodia-band-ds</jta-data-source>

        <jar-file>${project.build.finalName}.ear/lib/common-band-domain-1.0-SNAPSHOT.jar</jar-file>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.generate_statistics" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
            <property name="hibernate.listeners.envers.autoRegister" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
